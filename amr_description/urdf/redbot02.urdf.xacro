<?xml version="1.0"?>
<robot name="redbot02" xmlns:xacro="http://ros.org/wiki/xacro">
  <!-- Define materials -->
  <material name="red">
    <color rgba="1.0 0.1 0.1 1" />
  </material>
  <material name="gray">
    <color rgba="0.3 0.3 0.3 1" />
  </material>
  <material name="black">
    <color rgba="0.1 0.1 0.1 1" />
  </material>

  <!-- Define arguments for common parameters -->
  <xacro:property name="base_link_origin" value="-0.05 0 0.114"/>
  <xacro:property name="laser_origin" value="0.20 0 0.2515"/>
  <xacro:property name="imu_origin" value="0.0 0.0 0.20"/>
  <xacro:property name="wheel_radius" value="0.114"/>
  <xacro:property name="wheel_length" value="0.074"/>
  <xacro:property name="wheel_mass" value="0.168927903786118"/>

  <!-- Base footprint link -->
  <link name="base_footprint" />

  <!-- Base link -->
  <link name="base_link">
    <visual>
      <origin xyz="-0.05 0 0.114" />
      <geometry>
        <box size="0.60 0.30 0.240" />
      </geometry>
      <material name="black" />
    </visual>
  </link>

  <joint name="base_link_link_joint" type="fixed">
    <parent link="base_footprint" />
    <child link="base_link" />
    <origin xyz="0 0 0.114" />
  </joint>

  <!-- Lidar link and joint -->
  <link name="lidar_scan">
    <visual>
      <origin xyz="0 0 0" />
      <geometry>
        <mesh filename="package://redbot02_description/meshes/lidar.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="gray" />
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://redbot02_description/meshes/lidar.STL" scale="0.001 0.001 0.001"/>
      </geometry>
    </collision>
  </link>

  <joint name="laser_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="lidar_scan" />
    <origin xyz="0.20 0 0.242"/>
  </joint>

  <!-- IMU link and joint -->
  <link name="imu_link"/>
  <joint name="imu_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="imu_link" />
    <origin xyz="0.0 0.0 0.20"/>
  </joint>


  <link name="bracket_lidar_camera">
    <inertial>
        <origin xyz="5.65954616504882E-10 7.36872513007469E-09 -0.00280091247127531" rpy="0 0 0" />
        <mass value="0.05" />
        <inertia
            ixx="0.000180293267616765"
            ixy="3.49702912743621E-10"
            ixz="-5.96562390165147E-13"
            iyy="0.000180293249897517"
            iyz="-1.35611495762941E-11"
            izz="0.000340883721561127" />
    </inertial>
    <visual>
        <origin xyz="0.0375 -0.0565 0.135" rpy="1.57 -3.14 -1.57" />
        <geometry>
            <mesh filename="package://redbot02_description/meshes/bracket.STL" scale="0.001 0.001 0.001"/>
        </geometry>
        <material name="">
            <color rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
        </material>
    </visual>
    <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
            <mesh filename="package://redbot02_description/meshes/bracket.STL" scale="0.001 0.001 0.001"/>
        </geometry>
    </collision>
  </link>

  <joint name="bracket_link_joint" type="fixed">
    <parent link="base_link" />
    <child link="bracket_lidar_camera" />
    <origin xyz="0.20 0.0 0.186"/>
  </joint>
  
  <!-- Wheel left link and joint -->
  <xacro:macro name="wheel" params="name origin">
    <link name="${name}_link">
      <inertial>
        <origin xyz="5.65954616504882E-10 7.36872513007469E-09 -0.00280091247127531" rpy="0 0 0" />
        <mass value="${wheel_mass}" />
        <inertia
          ixx="0.000180293267616765"
          ixy="3.49702912743621E-10"
          ixz="-5.96562390165147E-13"
          iyy="0.000180293249897517"
          iyz="-1.35611495762941E-11"
          izz="0.000340883721561127" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
        </geometry>
        <material name="">
          <color rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
        </material>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}"/>
        </geometry>
      </collision>
    </link>
    <joint name="${name}_joint" type="continuous">
      <origin xyz="${origin}" rpy="-1.5707963267949 0 0" />
      <parent link="base_link" />
      <child link="${name}_link" />
      <axis xyz="0 0 1" />
    </joint>
  </xacro:macro>

  <xacro:wheel name="wheel_left" origin="0.00243065284555088 0.202000000002307 0.000100106132487177"/>
  <xacro:wheel name="wheel_right" origin="0.000243065284555311 -0.20200000997693 0.000100106132487593"/>

  <!-- Caster back link and joint -->
  <link name="caster_back_link">
    <inertial>
      <origin xyz="0.00712939689443792 -0.0131605253570176 8.95324089172922E-09" rpy="0 0 0" />
      <mass value="0.205322871078586" />
      <inertia
        ixx="0.000181440969274869"
        ixy="3.79381726757464E-05"
        ixz="-4.39393075162352E-11"
        iyy="0.000117632047892804"
        iyz="2.10111827256733E-12"
        izz="0.000234531410256484" />
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://redbot02_description/meshes/caster_back_link.STL" />
      </geometry>
      <material name="">
        <color rgba="0.792156862745098 0.819607843137255 0.933333333333333 1" />
      </material>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <mesh filename="package://redbot02_description/meshes/caster_back_link.STL" />
      </geometry>
    </collision>
  </link>
  <joint name="caster_back_joint" type="fixed">
    <origin xyz="-0.190006195960553 0 -0.070614324940508" rpy="-1.5707963267949 0 0" />
    <parent link="base_link" />
    <child link="caster_back_link" />
    <axis xyz="0 0 0" />
  </joint>

  <!-- Include the sensor D455 Xacro file -->
  <xacro:include filename="$(find redbot02_description)/urdf/sensor_d455.urdf.xacro" />
  <xacro:sensor_d455 parent="base_link" use_nominal_extrinsics="true">
    <origin xyz="0.195 0 0.292" rpy="0 0 0"/>
  </xacro:sensor_d455>
</robot>
